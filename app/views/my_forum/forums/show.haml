= link_to t('creta_new_topic'), new_forum_topic_path(@forum)

.container-fluid
  .row.forum-header
    .col-md-1
    .col-md-6=t('.subject')
    .col-md-1=t('.author')
    .col-md-1=t('.answers')
    .col-md-1=t('.views')
    .col-md-2=t('.last_message')

  .row.topic-list-container
    .box
      - @forum_topics.each do |topic|
        .row.topic-row
          .col-md-7.col-sm-7= link_to topic.name, forum_topic_path(@forum, topic)
          .col-md-1.col-sm-1= topic.posts.first.user.login
          .col-md-1.col-sm-1= topic.posts.count
          .col-md-1.col-sm-1=# topic.views
          .col-md-2.col-sm-2.info= topic_last_post_info(topic)